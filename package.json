{
  "name": "barangay-chain",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "pnpm --filter @barangay-chain/app dev",
    "build": "pnpm --filter @barangay-chain/contracts build && pnpm --filter @barangay-chain/app build",
    "test": "pnpm --filter @barangay-chain/contracts test",
    "contracts:build": "pnpm --filter @barangay-chain/contracts build",
    "contracts:test": "pnpm --filter @barangay-chain/contracts test",
    "contracts:deploy": "pnpm --filter @barangay-chain/contracts deploy",
    "contracts:verify": "pnpm --filter @barangay-chain/contracts verify",
    "app:dev": "pnpm --filter @barangay-chain/app dev",
    "app:build": "pnpm --filter @barangay-chain/app build",
    "app:start": "pnpm --filter @barangay-chain/app start"
  }
}
